<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Books_Talk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:background">#99A991</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:buttonStyle">@style/Books_Talk</item>
        <item name="android:editTextStyle">@style/BooksTalkEditText</item>
    </style>

    <style name="Theme.Books_Talk" parent="Base.Theme.Books_Talk" />

    <!-- Define custom button style -->
    <style name="Books_Talk">
        <item name="android:backgroundTint">#122710</item> <!-- Example background color for the button -->
        <item name="android:textColor">#FFFFFF</item>   <!-- Text color for the button -->
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Define custom EditText style -->
    <style name="BooksTalkEditText">
        <item name="android:background">#FFFFFF</item> <!-- Set the background to white -->
        <item name="android:textColor">#000000</item>               <!-- Set the text color to black -->
        <item name="android:paddingStart">16dp</item>               <!-- Add padding for better appearance -->
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">180dp</item>               <!-- Optional: Rounded corners -->
    </style>
    <style name="BooksTalkPosts">
        <item name="android:background">#FFFFFF</item> <!-- Set the background to white -->
        <item name="android:textColor">#000000</item>       <!-- Optional: Rounded corners -->
    </style>

</resources>
