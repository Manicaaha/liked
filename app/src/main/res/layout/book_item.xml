<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/book_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        app:srcCompat="@mipmap/avatar_foreground" />


    <TextView
        android:id="@+id/username_TextView"
        style="@style/BooksTalkPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:text="Username"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/book_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        style="@style/BooksTalkPosts"
        android:text="Book Title"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/book_avatar"
        app:layout_constraintTop_toBottomOf="@+id/username_TextView" />

    <TextView
        android:id="@+id/rating_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        style="@style/BooksTalkPosts"
        android:text="5,8"
        app:layout_constraintStart_toEndOf="@+id/Title_TextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_TextView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="16dp"
        android:maxLines="3"
        style="@style/BooksTalkPosts"
        android:ellipsize="end"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_light"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent vestibulum odio ut nisi tempus viverra. Integer quis porttitor risus. "
        android:textAlignment="viewStart"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Title_TextView"
        app:layout_constraintTop_toBottomOf="@+id/rating_TextView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/fav_foreground" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        style="@style/BooksTalkPosts"
        android:text="/10"
        app:layout_constraintStart_toEndOf="@+id/rating_TextView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/trash_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/trash_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>